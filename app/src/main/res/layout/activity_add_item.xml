<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="10dp">

    <EditText
        android:id="@+id/textFiled1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/btnHome"
        android:layout_marginBottom="-144dp"
        android:hint="Enter Description"
        android:inputType="text" />
    //discription of item

    <EditText
        android:id="@+id/textFiled2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/btnHome"
        android:layout_marginBottom="-200dp"
        android:hint="Enter Date"
        android:inputType="text" />
    //date of item

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="522dp"
        android:text="Go to Home screen" />
//take the user to the main screen

    <Button
        android:id="@+id/btnStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="278dp"
        android:text="OK" />
    //stores the information the user has entered


</RelativeLayout>